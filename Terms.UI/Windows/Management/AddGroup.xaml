<Window
    x:Class="Terms.Windows.Management.AddGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="540"
    Height="220"
    Closing="Window_OnClosing"
    Style="{DynamicResource BaseDialogWindow}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/Windows/Custom/RadioTabButton.xaml" />
                <ResourceDictionary Source="../../Styles/Windows/Button.xaml" />
                <ResourceDictionary Source="../../Styles/Windows/CheckBox.xaml" />
                <ResourceDictionary Source="../../Styles/Windows/ScrollViewer.xaml" />
                <ResourceDictionary Source="../../Styles/Windows/TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border Name="WindowBorder" Style="{DynamicResource BaseWindowNavigationBorder}" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Name="bdSidePanel"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="2"
                Padding="0,5,0,0"
                Background="Gray">

                <StackPanel>
                    <RadioButton
                        Name="rbGroup"
                        Checked="Tab_OnChecked"
                        Content="Group"
                        GroupName="WindowDisplayType"
                        IsChecked="True"
                        Style="{StaticResource RadioTabButton}" />

                    <RadioButton
                        Name="rbNotes"
                        Checked="Tab_OnChecked"
                        Content="Notes"
                        GroupName="WindowDisplayType"
                        Style="{StaticResource RadioTabButton}" />
                </StackPanel>
            </Border>

            <Grid
                Name="gGroup"
                Grid.Row="0"
                Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Name="lblName"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    Content="Name:" />

                <TextBox
                    x:Name="txtName"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="23"
                    Margin="0,10,10,0"
                    TabIndex="0" />

                <CheckBox
                    x:Name="chkAllowMultipleConnectionManagement"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,5,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Allow multiple connection management"
                    TabIndex="1" />

                <CheckBox
                    x:Name="chkAllowAllPasswordsToBeChanged"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Allow all passwords to be changed"
                    TabIndex="2" />

                <CheckBox
                    x:Name="chkCloseWindowAfterAdding"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Close window after adding"
                    TabIndex="3" />
            </Grid>

            <Grid
                Name="gNotes"
                Grid.Row="0"
                Grid.Column="1"
                Margin="10"
                Visibility="Collapsed">

                <TextBox
                    Name="txtNotes"
                    AcceptsReturn="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    TabIndex="4"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label
                    x:Name="lblErrorMessage"
                    Grid.Column="0"
                    Margin="5,10,10,10"
                    Content="Error"
                    Foreground="Red" />

                <StackPanel
                    Grid.Column="1"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal">

                    <Button
                        Name="bAdd"
                        Width="75"
                        Height="25"
                        Margin="0,0,5,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Click="Button_Add_OnClick"
                        Content="_Add"
                        IsDefault="True"
                        TabIndex="5" />

                    <Button
                        Width="75"
                        Height="25"
                        Margin="0,0,10,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Content="_Cancel"
                        IsCancel="True"
                        TabIndex="6" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>